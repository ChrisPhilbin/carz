<div align="center"><h1>Listing all repairs for your <%= @car.year %> <%= @car.make %> <%= @car.model %></h1><br /></div>
<div align="center">[ <a href="/repairs/new?car_id=<%= @car.id %>">Add a new repair for this car</a> | <a href="#">Remove this car</a> ]</div>
<ul>
	<% @repairs.each do |repair| %>
		<li>When: <%= repair.date %></li><br />
		<li>Description: <%= repair.description %></li><br />
		<li><a href="/edit_repair/<%=repair.id%>">Edit this repair</a></li><br />
		-----------------<br />
	<% end %>
</ul>